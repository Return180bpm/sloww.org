---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const apiKey = "61399c2360c74c329313f36c7772806c";
const encodedUrl = encodeURIComponent('https://sloww.org/');

const handleError = (err: any) => {
  console.log(err);
  // The requested Builder content could not be found.
  if (err.response.status === 404) {
    return { html: null };
  }
  throw err;
};

const { html: pageHTML } = await fetch(
  `https://cdn.builder.io/api/v1/qwik/homepage?apiKey=${apiKey}&url=${encodedUrl}&cachebust=true`
)
  .then((res) => res.json())
  .catch(handleError);

---

<Layout title='sloww'>
	  <Fragment set:html={pageHTML} />
</Layout>

